doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="./../css/styles.css")
    title
  body
  ul
    each photo in gallery
      h4 #{photo.title}

      img(src='#{photo.link}')

      p(class="description") #{photo.description}

      form(class="editButton")(method="GET", action="/gallery/#{photo.id}/edit")
        button(type="submit", value="submit") edit

      form(class="deleteButton")(name="delete-photo", method="POST", action="/gallery")
        input(type="hidden", name="_method", value="DELETE")
        button(type="submit", value="submit") delete