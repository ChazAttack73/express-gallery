doctype html
html(lang="en")
  head
    link(rel="stylesheet" href="./../css/styles.css")
    title
  body.singlePageWrapper
    div.mainPhotoWrapper
      h1.textWrap Land_escapes

      div.textWrap
        h4 #{gallery.title}
        p.textLink #{gallery.link}
      img.singleImage(src='#{gallery.link}')

      div.buttonBar
        if user.id === gallery.UserId
          div.singlePageButtons
            form(method="GET", action="/gallery/#{gallery.id}/edit")
              button.editButton(type="submit", value="submit") edit

            form(name="delete-photo", method="POST", action="/gallery/#{gallery.id}")
              input(type="hidden", name="_method", value="DELETE")
              button.deleteButton(type="submit", value="submit") delete

        form(method="GET", action="/gallery")
          button.backButton(type="submit", value="submit") back

      div.textWrap
        p #{gallery.description}

      //- each photo in gallery
    div.thumbWrapper
      each thumb in thumbs
        div.eachPhotoContent
          //- h4 #{thumb.title}

          //- every photo that gets uploaded
          //- a(href='/#{thumb.id}')
          img.uploadedPhoto(src='#{thumb.link}')